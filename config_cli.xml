<?xml version="1.0"?>
<config>
	
	<!--Root Folder can be absolute or relative to receiver path -->
	<rootFolder>../framework/</rootFolder>
	<rootURL>universibo2/htmls/</rootURL>
	<paths>
		<application>../universibo/</application>
		<commands>../universibo/commands/</commands>
	</paths>
	
	<receivers>
		<main>index.php</main>
	</receivers>
	
	<defaultCommand>ShowHome</defaultCommand>
	<commands>
	
		<ScriptUpdateFileHash class="ScriptUpdateFileHash" />
		
		<ScriptTest class="ScriptTest" />

		<ScriptCancelUser class="ScriptCancelUser" />
		
		<ScriptGetLDAPMD5 class="ScriptGetLDAPMD5" />		

		<ScriptNotificheSend class="ScriptNotificheSend" />

		<ScriptIscriviDocenti2 class="ScriptIscriviDocenti2" />
		<ScriptAggiungiPrgInsegnamento class="ScriptAggiungiPrgInsegnamento" />
		
		<ScriptCreaForum class="ScriptCreaForum" />
		<ScriptOrdinaForum class="ScriptOrdinaForum" />

		<ScriptCreaCatalogoFile class="ScriptCreaCatalogoFile" />
		
		<TestUnit class="TestUnit" />
		<TestTemplate class="TestTemplate" />
		
	</commands>
	
	<dbInfo type="DB">
	    <connection identifier="main">pgsql://universibo:universibo@127.0.0.1/universibo</connection>
	    <connection identifier="mysql">mysql://my_username:my_password@host/my_dbname</connection>
	</dbInfo>
	
	<mailerInfo>
		<!-- leave smtp empty if don't want to use a smtp server -->
	    <smtp>---pippo.joker.ing.unibo.it</smtp>
	    <fromAddress>universibo@mama.ing.unibo.it</fromAddress>
	    <replyToAddress>universibo@mama.ing.unibo.it</replyToAddress>
	    <fromName>UniversiBO</fromName>
	</mailerInfo>
	
	<templateInfo type="Smarty" debugging="off">
		<template_dirs>
			<web_dir>tpl/</web_dir>
			<smarty_dir>../framework/smarty/</smarty_dir>
			<smarty_template>../universibo/templates/</smarty_template>
			<smarty_compile>../universibo/templates_compile/</smarty_compile>
			<smarty_config>../universibo/templates_config/</smarty_config>
			<smarty_cache>../universibo/templates_cache/</smarty_cache>
		</template_dirs>
		<template_styles default="black">
			<style name="black" dir="black/" />
			<style name="unibo" dir="unibo/" />
			<style name="simple" dir="simple/" />
		</template_styles>
	</templateInfo>	
	
	<langInfo>
	 	<lang_dir>../universibo/lang/</lang_dir> 
	 	<lang_default>it</lang_default> 
	 	<date_separator>/</date_separator> 
	</langInfo>	
	
	<smsMobyInfo>
	    <username>your_username</username>
	    <password>your_password</password>
	    <fromName>UniversiBO</fromName>
	</smsMobyInfo>

	<!-- appSettings is an optional node. You can place any thing here 
                and access it from FrontController->getAppSetting()	-->
	<appSettings>
		<adLoginHost>127.0.0.1</adLoginHost>
		<version>2.2.2</version>
		<adLoginPort>1525</adLoginPort>
		<logs>../universibo/log-universibo/</logs>
		<notificheLock>../universibo/notifiche.lock</notificheLock>
        <contactsPath>img/contacts/</contactsPath>
		<langFile>/location/of/userLanguageFile.txt</langFile>
		<filesPath>../universibo/file-universibo/</filesPath>
		<filesTipoIconePath>img/icone_file/</filesTipoIconePath>
		<rootUrl>https://www.univesibo.unibo.it</rootUrl>
		<fotoDefault>no_foto.png</fotoDefault>
		<questionariReceiver>eagleone@libero.it;silvia.cereda@studio.unibo.it;spiff1281@email.it</questionariReceiver>
		<passwordDocentiAdmin>spiff1281;brain;sissi</passwordDocentiAdmin>
        <modFileStudenti>brain;sissi;LastHope</modFileStudenti>
        <programmazioneDidatticaAdmin>Elisa;brain;eagleone</programmazioneDidatticaAdmin>
        <alertMessage></alertMessage>
		<defaultStyle>unibo</defaultStyle>
		<rootEmail>universibo@mail.ing.unibo.it</rootEmail>
		<infoEmail>info_universibo@mama.ing.unibo.it</infoEmail>
		<regolamento>../universibo/files/regolamento.txt</regolamento>
		<informativaPrivacy>../universibo/files/informativa_privacy.txt</informativaPrivacy>
		<staffEmail>staff_universibo@calvin.ing.unibo.it</staffEmail>
		<defaultAnnoAccademico>2011</defaultAnnoAccademico>
		<catalogoFileName>../universibo/files/catalog.xml</catalogoFileName>
		
		<antiVirusEnable>true</antiVirusEnable>
        <antiVirusType>clamav</antiVirusType>
        <antiVirusClamavCmd>/usr/bin/clamscan</antiVirusClamavCmd>
        <antiVirusClamavOpts>--quiet --recursive --log=/var/log/clamscan.report --recursive --unzip=/usr/bin/unzip --unrar=/usr/local
/bin/unrar --tar=/bin/tar --tgz=/bin/
gunzip</antiVirusClamavOpts>
		
	</appSettings>
	
</config>
<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>
		<service id="universibo_legacy.db.factory"
			class="UniversiBO\Bundle\LegacyBundle\Framework\DBConnectionFactory">
			<call method="registerDSN">
				<argument>main</argument>
				<argument>%database_pear_driver%://%database_user%:%database_password%@%database_host%/%database_name%</argument>
			</call>
		</service>

		<service id="universibo_legacy.db.connection.main" class="DB_common"
			factory-service="universibo_legacy.db.factory" factory-method="getConnection">
			<argument>main</argument>
		</service>

		<service id="universibo_legacy.repository.canale"
			class="UniversiBO\Bundle\LegacyBundle\App\DBCanaleRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>
		
		<service id="universibo_legacy.repository.ruolo"
			class="UniversiBO\Bundle\LegacyBundle\App\DBRuoloRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.user"
			class="UniversiBO\Bundle\LegacyBundle\App\DBUserRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.auth.ldap"
			class="UniversiBO\Bundle\LegacyBundle\Auth\ActiveDirectoryLogin">
			<argument>%adlogin_host%</argument>
			<argument>%adlogin_port%</argument>
		</service>
	</services>
</container>

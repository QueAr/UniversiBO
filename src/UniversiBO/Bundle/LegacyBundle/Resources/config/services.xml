<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="universibo_root" type="constant">UNIVERSIBO_ROOT</parameter>
	</parameters>

	<services>
		<service id="universibo_legacy.db.factory"
			class="UniversiBO\Bundle\LegacyBundle\Framework\DBConnectionFactory">
			<call method="registerDSN">
				<argument>main</argument>
				<argument>%database_pear_driver%://%database_user%:%database_password%@%database_host%/%database_name%</argument>
			</call>
		</service>

		<service id="universibo_legacy.db.connection.main" class="DB_common"
			factory-service="universibo_legacy.db.factory" factory-method="getConnection">
			<argument>main</argument>
		</service>

		<service id="universibo_legacy.cl.javabridge" public="false"
			class="UniversiBO\Bundle\LegacyBundle\Framework\ConditionLanguage\JavaBridge" />

		<service id="universibo_legacy.cl.cache" public="false"
			class="UniversiBO\Bundle\LegacyBundle\Framework\ConditionLanguage\HashedCache" />
		<service id="universibo_legacy.cl.executor.php" public="false"
			class="UniversiBO\Bundle\LegacyBundle\Framework\ConditionLanguage\PhpExecutor">
			<argument type="service" id="universibo_legacy.cl.cache" />
		</service>
		<service id="universibo_legacy.cl.executor.sql" public="false"
			class="UniversiBO\Bundle\LegacyBundle\Framework\ConditionLanguage\SqlExecutor">
			<argument type="service" id="universibo_legacy.db.connection.main" />
			<argument type="service" id="universibo_legacy.cl.cache" />
		</service>

		<service id="universibo_legacy.cl.executor.entity" public="false"
			class="UniversiBO\Bundle\LegacyBundle\Framework\ConditionLanguage\EntityRetrieverSf2">
			<argument type="service" id="universibo_legacy.db.connection.main" />
			<argument type="service" id="security.context" />
			<argument type="service" id="universibo_legacy.krono" />
		</service>

		<service id="universibo_legacy.cl.executor.factory" public="false"
			class="UniversiBO\Bundle\LegacyBundle\Framework\ConditionLanguage\ExecutorFactory">
			<call method="register">
				<argument>php</argument>
				<argument type="service" id="universibo_legacy.cl.executor.php" />
			</call>
			<call method="register">
				<argument>sql</argument>
				<argument type="service" id="universibo_legacy.cl.executor.sql" />
			</call>
			<call method="register">
				<argument>entity</argument>
				<argument type="service" id="universibo_legacy.cl.executor.entity" />
			</call>
		</service>

		<service id="universibo_legacy.cl.interpreter"
			class="UniversiBO\Bundle\LegacyBundle\Framework\ConditionLanguage\CLInterpreter">
			<argument type="service" id="universibo_legacy.cl.executor.factory" />
			<argument type="service" id="universibo_legacy.cl.javabridge" />
			<argument>%universibo_root%/framework/CL</argument>
		</service>

		<service id="universibo_legacy.krono" class="Krono">
			<argument>it</argument>
			<argument>it</argument>
			<argument>/</argument>
		</service>

		<service id="universibo_legacy.repository.canale"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBCanaleRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.cdl"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBCdlRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.collaboratore"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBCollaboratoreRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.contatto_docente"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBContattoDocenteRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.docente"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBDocenteRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>
		
		<service id="universibo_legacy.repository.facolta"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBFacoltaRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.informativa"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBInformativaRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.news.news_item"
			class="UniversiBO\Bundle\LegacyBundle\Entity\News\DBNewsItemRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.ruolo"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBRuoloRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.repository.user"
			class="UniversiBO\Bundle\LegacyBundle\Entity\DBUserRepository">
			<argument type="service" id="universibo_legacy.db.connection.main" />
		</service>

		<service id="universibo_legacy.auth.ldap"
			class="UniversiBO\Bundle\LegacyBundle\Auth\ActiveDirectoryLogin">
			<argument>%adlogin_host%</argument>
			<argument>%adlogin_port%</argument>
		</service>

		<service id="universibo_legacy.security.authentication.provider"
			class="UniversiBO\Bundle\LegacyBundle\Auth\UniversiBOProvider"
			public="false">
			<argument type="service" id="universibo_legacy.repository.user" />
		</service>

		<service id="universibo_legacy.security.authentication.listener"
			class="UniversiBO\Bundle\LegacyBundle\Auth\UniversiBOListener"
			public="false">
			<argument type="service" id="security.context" />
			<argument type="service" id="security.authentication.manager" />
		</service>

		<service id="universibo_legacy.message.sms" class="mobytSms">
			<argument>%sms_user%</argument>
			<argument>%sms_password%</argument>
			<argument>%sms_from%</argument>
		</service>
	</services>
</container>

<h1>Professor list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Professorcode</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Prefix</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('professor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.professorCode }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.surname }}</td>
            <td>{{ entity.prefix }}</td>
            <td>{{ entity.gender }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('professor_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('professor_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('professor_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

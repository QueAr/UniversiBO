      <div id="header-middle">
        <h1>UniversiBO</h1>
        <h2>La community degli studenti per gli studenti</h2>
      </div>
    </div>
    <div id="header-right-container" class="container">
      <div id="header-right">
        {{"now"|date('d F Y')}}
      </div>
    </div>
    <br style="clear: both"/>
  </div>
  <div id="menubar">
    <ul>
      <li><a href="{{ url('homepage') }}">Homepage</a></li>
      <li>|</li>
      <li><a href="/forum/">Forum</a></li>
	  <li>|</li>

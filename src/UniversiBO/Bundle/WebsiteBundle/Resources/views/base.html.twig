<!DOCTYPE html>
<html>
<head>
<title>{% block title %}UniversiBO - La community degli studenti per gli studenti{% endblock %}</title>
<link href="{{ asset('bundles/universibowebsite/css/screen.css') }}" rel="stylesheet" type="text/css" />
<meta http-equiv="content-type" content="text/html; charset=utf8"/>
</head>
<body>
<div id="main">
  <div id="header">
    <div id="header-left-container" class="container">
      <div id="header-left">
        <a href="{{ url('homepage') }}"><img src="{{ asset('bundles/universibowebsite/images/logo.png') }}" alt="logo"/></a>
      </div>
    </div>
    <div id="header-middle-container" class="container">
      <div id="header-middle">
        <img src="{{ asset('tpl/unibo/logo_default.gif') }}" alt="logo"/>
      </div>
    </div>
    <div id="header-right-container" class="container">
      <div id="header-right">
        {{"now"|date('d F Y - H:i')}}
      </div>
    </div>
    <br style="clear: both"/>
  </div>
  <div id="menubar">
    <ul>
      <li><a href="#">Help</a></li>
      <li>|</li>
      <li><a href="/forum/">Forum</a></li>
	  <li>|</li>
	  <li><a href="{{ url('staff_index') }}">Chi Siamo</a></li>
	  <li>|</li>
      <li><a href="#">Collabora</a></li>
      <li>|</li>
      <li><a href="{{ url('info_rules') }}">Regolamento</a></li>
    </ul>
  </div>
  <div id="left-container" class="container">
    <div id="left" class="sidebar">
    Left
    </div>
  </div>
  <div id="content-container" class="container">
    <div id="content">
    {% block content %}
    {% endblock %}
    </div>
  </div>
  <div id="right-container" class="container">
    <div id="right" class="sidebar">
    Right
    </div>
  </div>

<div class="sso-login-box">
{% if(is_granted('IS_AUTHENTICATED_FULLY')) %}
  {{ app.user.principalName }}
{% endif %}
<a href="{{ infoUrl }}">
  <img src="{{ asset('bundles/universibosso/images/ssologo18x18.png') }}" alt="{% trans %}universibo_sso.info{% endtrans %}" title="{% trans %}universibo_sso.info{% endtrans %}"/>
</a>
{% if(is_granted('IS_AUTHENTICATED_FULLY')) %}
  <a href="{{ logoutUrl }}">Logout</a>
{% else %}
  <a href="{{ path('universibo_sso_login') }}">Login</a>
{% endif %}
</div>
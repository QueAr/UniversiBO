    {% endraw %}
	{# END GOOGLE CUSTOM SEARCH ENGINE #}
	{% endif %}
	{if $common_alert != ""}
	<div id="alert">{$common_alert|escape:"htmlall"}</div>
	{/if}
        {% block content %}{% endblock %}
        	</div>
</td> {# FINE MENU CENTRALE#}
<td id="rightmenu" width="170"> {# COLONNA MENU DI DESTRA#}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% render 'UniversiboWebsiteBundle:UserBox:index' %}
    {% endif %}
    {% render 'UniversiboWebsiteBundle:Common:calendar' %}


	<p id="versione">Versione {$common_version|escape:"htmlall"}</p>
</td></tr> {# FINE MENU DI DESTRA#}
<tr>
	<td colspan="2">
		<div id="footer"> {# FONDO PAGINA #}
                    {% render 'UniversiboWebsiteBundle:Common:disclaimer' %}
		</div>
	</td>
</tr>
</table>
</body>
</html>
